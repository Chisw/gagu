---
import Block from '../components/Block.astro'
import Layout from '../layouts/Layout.astro'
import iconNPM from '../img/icons/npm.svg'
import iconDownload from '../img/icons/download.svg'
import '../css/index.css'
---

<Layout title="GAGU - A cool web file management system">

  <Block className="bg-gradient-to-br from-gray-500 to-gray-800 bg-fixed">
    <div class="h-100vh flex flex-wrap items-center">
      <div class="w-full lg:w-1/2 flex justify-center lg:justify-start items-center">
        <div class="text-center lg:text-left text-white">
          <p class="opacity-60 text-xs md:text-base">/'gʌgu/</p>
          <p class="text-5xl lg:text-7xl font-bold">GAGU</p>
          <p class="mt-3 text-xl md:text-3xl opacity-60">A cool web file management system</p>
          <p class="mt-2 text-sm md:text-lg opacity-60">Manage your different device files in browser.</p>
          <p class="text-sm md:text-lg opacity-60">Support Windows, macOS, Linux and Termux(Android).</p>
          <div class="mt-12 flex">
            <a
              href="#npm"
              class="mr-4 px-6 h-10 text-sm bg-gray-100 text-gray-600 flex justify-center items-center rounded-full cursor-pointer shadow-lg"
            >
              <img src={iconNPM} class="w-6 h-6" />
              <span class="ml-2">Install with NPM</span>
            </a>
            <a
              href="#npm"
              class="mr-4 px-6 h-10 text-sm bg-gray-100 text-gray-600 flex justify-center items-center rounded-full cursor-pointer shadow-lg"
            >
              <img src={iconDownload} class="w-6 h-6" />
              <span class="ml-2">Download</span>
            </a>
          </div>
          <p class="mt-4 text-xs opacity-60">Version: 0.0.26(Beta)</p>
        </div>
      </div>
      <div class="w-full lg:w-1/2 mt-10 lg:mt-0">
        <img
          alt="developing"
          src="https://jisuowei.com/file/gagu.png"
          class="w-full h-full"
        />
      </div>
    </div>
  </Block>

  <Block
    id="npm"
    className="bg-gradient-to-br from-gray-400 to-white bg-fixed"
  >
    <div class="py-32 flex flex-wrap justify-center">
      <div class="w-full lg:w-1/2 px-0 md:px-12 lg:px-24">
        <h2 class="text-2xl md:text-4xl text-center font-bold">Install with NPM</h2>
        <div class="mt-12">
          <p class="text-gray-500 text-sm">Install on your terminal:</p>
          <code
            class="block mt-2 px-4 py-2 rounded-md bg-gray-900 text-gray-400"
          >
            $ npm i -g gagu
          </code>
        </div>
        <div class="mt-4">
          <p class="text-gray-500 text-sm">Start service:</p>
          <code
            class="block mt-2 px-4 py-2 rounded-md bg-gray-900 text-gray-400"
          >
            $ gagu
          </code>
        </div>
      </div>
      <div class="mt-24 lg:mt-0 w-full lg:w-1/2">
        <h2 class="text-2xl md:text-4xl text-center font-bold">Download</h2>
        <div class="mt-12 text-center">
          <p class="mb-8 text-xl font-bold text-gray-600">Windows · macOS · Linux</p>
          <p>Package built via Vercel/pkg</p>
          <p>will be available after v1.0.0 released</p>
        </div>
      </div>
    </div>
  </Block>

</Layout>
