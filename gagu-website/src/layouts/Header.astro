---
import iconGAGU from '../img/icons/gagu.svg'
import iconGitHub from '../img/icons/github.svg'

const navList = [
  { label: 'Docs', url: '/docs/introduction/what-is-gagu' },
  { label: 'GitHub', url: 'https://github.com/Chisw/gagu', icon: iconGitHub },
]
---

<div>
  <div class="h-12 bg-gray-800"></div>
  <div class="fixed z-10 top-0 right-0 left-0 bg-gray-800 bg-opacity-80 backdrop-blur">
    <div class="px-4 md:px-12 h-12 flex justify-between items-center">
      <a href="/">
        <img
          src={iconGAGU}
          class="h-3 md:h-4"
        />
      </a>
      <div class="flex items-center">
        {navList.map(({ label, url, icon }) => (
          <a
            class="ml-6 text-gray-200 hover:text-white flex items-center"
            href={url}
            target={url.startsWith('http') ? '_blank' : '_self'}
          >
            {icon ? (
              <img src={icon} class="w-6 h-6" />
            ) : (
              <span>{label}</span>
            )}
          </a>
        ))}
      </div>
    </div>
  </div>
</div>
