---
import iconGAGU from '/assets/icons/gagu.svg'
import iconGitHub from '/assets/icons/github.svg'
import iconI18n from '/assets/icons/i18n.svg'

const navList = [
  { label: 'i18n', url: 'javascript:switchLang();', icon: iconI18n },
  { label: 'Docs', url: '/docs/introduction/what-is-gagu' },
  { label: 'github', url: 'https://github.com/Chisw/gagu', icon: iconGitHub },
]
---

<div>
  <div class="h-12 bg-zinc-900"></div>
  <div class="fixed z-20 top-0 right-0 left-0 bg-zinc-900 bg-opacity-80 backdrop-blur">
    <div class="px-4 md:px-12 h-12 flex justify-between items-center">
      <a href="/">
        <img
          src={iconGAGU}
          class="h-3 md:h-4"
        />
      </a>
      <div class="flex items-center">
        {navList.map(({ label, url, icon }) => (
          <a
            id={`header-${label}`}
            class="ml-3 md:ml-6 text-white opacity-70 hover:opacity-90 active:opacity-80"
            href={url}
            target={url.startsWith('http') ? '_blank' : '_self'}
          >
            {icon ? (
              <img src={icon} class="w-6 h-6" />
            ) : (
              <span>{label}</span>
            )}
          </a>
        ))}
      </div>
    </div>
  </div>
</div>
<script is:inline>
function switchLang() {
  const pathname = location.pathname.replace(/\/*$/, '')
  location.href = pathname.endsWith('.zh')
    ? pathname.replace('.zh', '')
    : pathname + '.zh'
}
</script>
