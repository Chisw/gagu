{
  "manifest_version": 3,
  "name": "GAGU",
  "version": "0.0.1",
  "description": "GAGU chrome assistant",
  "homepage_url": "https://gagu.io",
  "omnibox": {
    "keyword": "GAGU"
  },
  "default_locale": "zh_CN",
  "icons": {
    "16": "static/img/icon.png",
    "48": "static/img/icon.png",
    "128": "static/img/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "defalut_icon": "static/img/icon.png",
    "default_title": "GAGU",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "bookmarks",
    "contextMenus",
    "favicon",
    "history",
    "notifications",
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "content-script/saver/saver.css"
      ],
      "js": [
        "content-script/saver/saver.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://map.baidu.com/*"],
      "js": ["content-script/panorama/panorama.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ]
}
